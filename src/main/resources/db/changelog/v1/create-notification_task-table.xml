<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">


    <changeSet id="create-notification_task-table-1" author="evgeniy-fedorchenko">

        <preConditions>
            <not>
                <tableExists tableName="notification_task"/>
            </not>
        </preConditions>

        <createTable tableName="notification_task">
            <column name="id" autoIncrement="true" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_notification_task"/>
            </column>

            <column name="chat_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="notification_text" type="TEST">
                <constraints nullable="false" checkConstraint="LENGTH(your_column) &lt;= 1000"/>
            </column>

            <column name="notification_date_time" type="TIMESTAMP">
                <constraints nullable="false" checkConstraint="your_timestamp_column > CURRENT_TIMESTAMP"/>
            </column>

            <column name="username" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

</databaseChangeLog>
